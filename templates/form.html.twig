{% extends "base.html.twig" %}

{% block content %}
    <div class="form-create">
        <h1>Создать запись в расписании курьера.</h1>
        <div class="info"></div>
        <form id="create-schedule">
            <div class="form-group">
                <label for="region">Регионы</label>
                <select name="region" class="form-control" id="region">
                    <option  value="">Выберите регион</option>
                    {% for key,value in regions %}
                        <option value="{{ value.id }}">{{ value.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="courier">Доступные курьеры</label>
                <select name="courier" class="form-control" id="courier">
                    <option value=""> Выберите курьера. </option>
                    {% for key,value in couriers %}
                        <option value="{{ value.id }}">{{ value.name }} {{ value.surname }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                    <input type="text" name="date" class="form-control datetimepicker-input" data-target="#datetimepicker1"/>
                    <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
            </div>
            <div class="form-check">
                <input name="product_exist"  type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">У курьера есть необходимый продукт с собой. </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
{% endblock %}